QMainWindow {
    background-color: @window_zero;
}

QDockWidget {
    background-color: @window_minus_one;
}

QTreeWidget {
    background-color: @window_minus_one;
}

QListWidget {
    background-color: @window_plus_one;
}

CollapsibleBox {
    background-color: @window_zero;
}

QToolButton {
    background-color: @window_zero;
    color: @highest_contrast;
    border: none;
}
QGroupBox {
    background-color: @window_minus_one;
    border-radius: 5px;
    color: @text;
}


QScrollArea {
    background: @window_minus_one;
    color: @high_contrast;
}

QComboBox {
    background-color: @window_minus_two;
    border-radius: 3px;
    border: none;
    color: @highest_contrast;
}

